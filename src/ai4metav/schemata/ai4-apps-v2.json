{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "definitions": {
    },
    "type": "object",
    "properties": {
        "title": {
            "description": "Name of the Data Science application",
            "type": "string"
        },
        "summary": {
            "description": "Short text describing the value of the Data Science application",
            "type": "string"
        },
        "description": {
            "description": "Elaborated description of the Data Science application",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "doi" : {
            "description": "DOI of the Data Science application",
            "type": "string",
            "format": "doi"
        },
        "links": {
            "title": "links",
            "type": "object",
            "properties": {
                "documentation": {
                    "description": "URL pointing to the relevant documentation.",
                    "type": "string",
                    "format": "uri"
                },
                "source_code": {
                    "description": "URL pointing to the relevant source code.",
                    "type": "string",
                    "format": "uri"
                },
                "docker_image": {
                    "description": "URL pointing to the relevant Docker image.",
                    "type": "string",
                    "format": "uri"
                },
                "zenodo_doi": {
                    "description": "DOI of the Zenodo record.",
                    "type": "string",
                    "format": "uri"
                },
                "dataset": {
                    "description": "URL pointing to the relevant dataset.",
                    "type": "string",
                    "format": "uri"
                },
                "weights": {
                    "description": "URL of file containing weights from training",
                    "type": "string",
                    "format": "uri"
                },
                "citation": {
                    "description": "URL pointing to the relevant citation. Please use a Citation File Format (CFF) if possible.",
                    "type": "string",
                    "format": "uri"
                },
                "base_model": {
                    "description": "URL pointing to a base model if this model is a fine-tune, adaptation, etc. of another one.",
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "source_code"
            ]   
        },
        "dates": {
            "title": "dates",
            "type": "object",
            "properties": {
                "creation": {
                    "description": "Creation date of the Data Science application",
                    "type": "string",
                    "format": "date"
                },
                "update": {
                    "description": "Last update date of the Data Science application",
                    "type": "string",
                    "format": "date"
                }
            },
            "required": [
                "creation",
                "update"
            ]
        },
        "libraries": {
            "description": "Libraries used in the Data Science application",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "TensorFlow",
                    "PyTorch",
                    "Keras",
                    "Scikit-learn",
                    "XGBoost",
                    "LightGBM",
                    "CatBoost",
                    "Other"
                ]
            }
        },
        "topics": {
            "description": "Topic/s for the tasks that categorize the Data Science application",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "Computer Vision",
                    "Natural Language Processing",
                    "Time Series",
                    "Recommender Systems",
                    "Anomaly Detection",
                    "Regression",
                    "Classification",
                    "Clustering",
                    "Dimensionality Reduction",
                    "Generative Models",
                    "Graph Neural Networks",
                    "Optimization",
                    "Reinforcement Learning",
                    "Transfer Learning",
                    "Uncertainty Estimation",
                    "Other",
                    "AI4 pre trained",
                    "AI4 trainable",
                    "AI4 inference",
                    "AI4 tools"
                ]
            }
        },
        "tags": {
            "description": "User provided tags to best describe the Data Science application",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "license": {
            "description": "License adopted by the Data Science application",
            "type": "string"
        }
    },
    "required": [
        "title",
        "summary",
        "description",
        "links",
        "libraries",
        "topics",
        "tags",
        "license"
    ],
    "not": { 
        "required": [ 
            "tosca",
            "sources",
            "dataset_url",
            "cite_url",
            "date_creation",
            "keywords"
        ] 
    }
}
